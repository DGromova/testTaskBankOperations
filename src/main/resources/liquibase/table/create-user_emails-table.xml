<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="4" author="admin">

        <preConditions>
            <not>
                <tableExists tableName="user_emails"/>
            </not>
        </preConditions>

        <createTable tableName="user_emails">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" />
            </column>
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="emails" type="text">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="FK_EM_TO_USERS_ID"
                                 baseColumnNames="user_id"
                                 baseTableName="user_emails"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>